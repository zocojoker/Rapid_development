<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="fbrp_infrastructure_jdbcTemplate_4read" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="${defaultDs.4read}"/>
        <property name="fetchSize" value="${jdbc.fetchSize}"/>
    </bean>

    <bean id="fbrp_infrastructure_simpleJdbcTemplate_4read"
          class="org.springframework.jdbc.core.simple.SimpleJdbcTemplate">
        <constructor-arg ref="fbrp_infrastructure_jdbcTemplate_4read"/>
    </bean>

    <bean id="fbrp_infrastructure_sqlSessionFactoryBean_4read" class="com.foresee.fbrp.infrastructure.persistence.factory.FbrpSqlSessionFactoryBean">
        <property name="configLocation">
            <value>classpath:/META-INF/conf/mybatis/fbrp-infrastructure-config.xml</value>
        </property>
        <property name="mapperLocations">
            <value>classpath*:/META-INF/conf/mybatis/*-mapper.xml</value>
        </property>
        <property name="dataSource" ref="${defaultDs.4read}" />
    </bean>

    <bean id="fbrp_infrastructure_sqlSessionTemplate_4read" class="org.mybatis.spring.SqlSessionTemplate">
        <constructor-arg index="0" ref="fbrp_infrastructure_sqlSessionFactoryBean_4read"/>
    </bean>

    <bean id="fbrp_infrastructure_dataSourceDBCP_4read" class="org.apache.commons.dbcp.BasicDataSource"
          destroy-method="close" lazy-init="true" primary="true">
        <property name="driverClassName">
            <value>${jdbc.driverClassName}</value>
        </property>
        <property name="url">
            <value>${jdbc.url.4read}</value>
        </property>
        <property name="username">
            <value>${jdbc.username.4read}</value>
        </property>
        <property name="password">
            <value>${jdbc.password.4read}</value>
        </property>
        <property name="validationQuery">
            <value>${jdbc.validationQuery}</value>
        </property>
        <property name="initialSize" value="${jdbc.initialSize}"/>
        <property name="maxActive" value="${jdbc.maxActive}"/>
        <property name="minIdle" value="${jdbc.minIdle}"/>
        <property name="maxIdle" value="${jdbc.maxIdle}"/>
    </bean>

    <bean id="fbrp_infrastructure_dataSourceJNDI_4read" class="org.springframework.jndi.JndiObjectFactoryBean"
          lazy-init="true">
        <property name="jndiName">
            <value>${dataSource.jndiName.4read}</value>
        </property>
        <property name="lookupOnStartup" value="true" />
        <property name="proxyInterface" value="javax.sql.DataSource" />
        <property name="resourceRef" value="false" />
    </bean>

</beans>